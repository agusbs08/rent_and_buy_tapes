@model IEnumerable<ProjectUAS.Models.Pemesanan>

@{
    ViewBag.Title = "Pemesanan";
}

<h2>Pemesanan</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kaset.nama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tanggal_pemesanan)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.harga)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kaset.nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tanggal_pemesanan)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.harga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            @if (item.status != "Dibatalkan" && item.status != "Sudah Diterima")
            {
            <td>    
                    @Html.ActionLink("Konfirmasi Penerimaan", "Penerimaan", new { id = item.id }) | @Html.ActionLink("Batalkan Pesanan", "StrukPembatalan", new { id = item.id })               
            </td>
            }
            else{ 
            <td></td>
            }
        </tr>
    }

</table>
